pipeline{
    agent{
        label "mynode"
    }
    triggers {
        cron("0 * * * *")
    }
    stages{
        stage("SCM"){
            steps{
                git "https://github.com/Reddy-hub-sudo/spc-jenkins.git"
            }
        }
        stage("BUILD"){
            steps{
                 sh script: "mvn clean package"
            }
        }
        stage("POSTBUILD"){
            steps{
                 junit "target/surefire-reports/*.xml"
                 archiveArtifacts "target/*.jar"
            }
        }

    }
}