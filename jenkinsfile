pipeline{
    agent any
    triggers {
        cron("0 * * * *")
    }
    stages{
        stage("SCM"){
            steps{
                git "https://github.com/Reddy-hub-sudo/spc-jenkins.git"
            }
        }
        stage("BUILD"){
            steps{
                 withSonarQubeEnv("sonarqube") {
                    sh script: "mvn clean package sonar:sonar"
                }
            }
        }
        stage("POSTBUILD"){
            steps{
                 junit "target/surefire-reports/*.xml"
                 archiveArtifacts "target/*.jar"
            }
        }

    }
}
